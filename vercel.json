{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",  // ← Chỉ định build từ client/
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"           // ← Output trong client/build
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
